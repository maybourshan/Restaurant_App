<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="top|center_horizontal"
    android:background="@drawable/backmainpage">

    <!-- Centered Text at the Top -->
    <TextView
        android:id="@+id/tvThankYouMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Thank you for your reservation"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:fontFamily="@font/dancingfont" />

    <!-- V Image Below the Text -->
    <ImageView
        android:id="@+id/checkmarkImage"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Checkmark Animation"
        android:src="@drawable/checkmark_animation" />

    <!-- Spacer to Flexibly Fill Space -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button at the Bottom -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back_button3"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/dancingfont"
            android:backgroundTint="@android:color/black" />
    </LinearLayout>
</LinearLayout>
