<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back2">

        <!-- Back button to return to the previous screen -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_back"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <!-- Menu title text displayed at the top -->

        <!-- The first dish in the menu -->

        <TextView
            android:id="@+id/tvMenuTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/dancingfont"
            android:text="@string/menu_title"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDishTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/caprese_salad"
            app:layout_constraintHorizontal_bias="0.5"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMenuTitle" />

        <ImageView
            android:id="@+id/imageViewDish"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_width="96dp"
            android:layout_height="121dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/capreza"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishTitle" />

        <TextView
            android:id="@+id/tvDishPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/caprese_price"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewDish" />

        <TextView
            android:id="@+id/tvDishInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/caprese_info"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishPrice" />

        <!-- The second dish in the menu -->

        <TextView
            android:id="@+id/tvDishTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/bolognese"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishInfo" />

        <ImageView
            android:id="@+id/imageViewDish2"
            android:layout_width="96dp"
            android:layout_height="121dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/bolognese"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishTitle2" />

        <TextView
            android:id="@+id/tvDishPrice2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/bolognese_price"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewDish2" />

        <TextView
            android:id="@+id/tvDishInfo2"
            android:layout_width="258dp"
            android:layout_height="92dp"
            android:layout_marginTop="12dp"
            android:text="@string/bolognese_info"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishPrice2" />

        <!-- The third dish in the menu -->
        <TextView
            android:id="@+id/tvDishTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/pasta_pesto"
            app:layout_constraintHorizontal_bias="0.5"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishInfo2" />

        <ImageView
            android:id="@+id/imageViewDish3"
            android:layout_width="96dp"
            android:layout_height="121dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/pasta_pesto"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishTitle3" />

        <TextView
            android:id="@+id/tvDishPrice3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/pasta_pesto_price"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewDish3" />

        <TextView
            android:id="@+id/tvDishInfo3"
            android:layout_width="258dp"
            android:layout_height="92dp"
            android:layout_marginTop="12dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:text="@string/pasta_pesto_info"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishPrice3" />

        <!-- The fourth dish in the menu -->
        <TextView
            android:id="@+id/tvDishTitle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/coca_cola"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishInfo3" />

        <ImageView
            android:id="@+id/imageViewDish4"
            android:layout_width="96dp"
            android:layout_height="121dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/coca_cola"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishTitle4" />

        <TextView
            android:id="@+id/tvDishPrice44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/coca_cola_price"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewDish4" />

        <!-- The fifth dish in the menu -->
        <TextView
            android:id="@+id/tvDishTitle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/sprite"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishPrice44" />

        <ImageView
            android:id="@+id/imageViewDish5"
            android:layout_width="96dp"
            android:layout_height="121dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/sprite"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishTitle5" />

        <TextView
            android:id="@+id/tvDishPrice5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/sprite_price"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewDish5" />

        <!-- The sixt dish in the menu -->
        <TextView
            android:id="@+id/tvDishTitle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="@string/grape_juice"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishPrice5" />

        <ImageView
            android:id="@+id/imageViewDish6"
            android:layout_width="96dp"
            android:layout_height="121dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/juice"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDishTitle6" />

        <TextView
            android:id="@+id/tvDishPrice4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/grape_juice_price"
            android:textColor="@android:color/black"
            android:fontFamily="@font/dancingfont"
            app:layout_constraintHorizontal_bias="0.5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewDish6" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
